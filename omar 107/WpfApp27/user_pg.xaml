<Window x:Class="WpfApp27.user_pg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp27"
        mc:Ignorable="d"
        Title="user_pg" Height="450" Width="800">
    <Grid Background="AntiqueWhite">
        <DataGrid x:Name="Completed" Margin="106,264,255,28" SelectionChanged="Completed_SelectionChanged_1"/>
        <DataGrid x:Name="pend" Margin="28,28,332,289" SelectionChanged="pend_SelectionChanged_1"/>
        <TextBox x:Name="id_txt" HorizontalAlignment="Left" Margin="122,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="65" Height="42"/>
        <Label Content="id" HorizontalAlignment="Left" Margin="97,0,0,0" VerticalAlignment="Center"/>
        <Button x:Name="save_butt" Content="Save" HorizontalAlignment="Left" Margin="589,204,0,0" VerticalAlignment="Top" Height="41" Width="69" Click="save_butt_Click_1"/>
        <ComboBox x:Name="cb" Margin="265,178,332,196" SelectionChanged="cb_SelectionChanged">
            <ComboBoxItem>
                Completed
            </ComboBoxItem>
            <ComboBoxItem>
                Pending
            </ComboBoxItem>
            <ComboBoxItem>
                In Progress
            </ComboBoxItem>

        </ComboBox>
    </Grid>
</Window>
